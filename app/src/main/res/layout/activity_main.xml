<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.testapp.MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="@string/edit_message"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="4dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="124dp"
        android:layout_height="42dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/button_send"
        android:onClick="sendMessage"
        android:text="Поздороваться"
        app:layout_constraintBottom_toBottomOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editText"
        app:layout_constraintTop_toTopOf="@+id/editText"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/button_counter"
        android:layout_width="128dp"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="counter"
        android:text="+1"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.515" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/button_counter"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:stretchColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/inputMain"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btClear"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:onClick="onClick"
                android:text="C"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="1"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="2"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt3"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="3"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btPlus"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="+"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <Button
                android:id="@+id/bt4"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="4"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt5"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="5"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt6"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="6"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btMinus"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="-"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <Button
                android:id="@+id/bt7"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="7"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt8"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="8"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/bt9"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="9"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btMulti"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="*"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="82dp">

            <Button
                android:id="@+id/bt0"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="0"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btPoint"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text=","
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btEqual"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="="
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/btDivision"
                android:layout_width="wrap_content"
                android:layout_height="82dp"
                android:onClick="onClick"
                android:text="/"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="0dp" />
        </TableRow>

    </TableLayout>

</android.support.constraint.ConstraintLayout>
